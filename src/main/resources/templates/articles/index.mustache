{{>layouts/header}}
<style>
  html, body {
    height: 100%;
    margin: 0;
  }
  body {
    display: flex;
    flex-direction: column;
  }
  main {
    flex: 1;
  }
</style>
<body class="bg-light">
 <main class="container my-5">
<div class="container my-5">

    <!-- 페이지 타이틀 -->
    <h2 class="mb-4 border-start border-5 border-primary ps-3 fw-bold fs-3 text-dark">최신 기사</h2>

    <!-- 메시지 표시 -->
    {{#msg}}
    <div class="alert alert-warning text-center">{{msg}}</div>
    {{/msg}}

    <!-- 기사 카드 레이아웃 -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {{#list}}
        <div class="col">
            <div class="card h-100 shadow-sm border-0">

                <!-- 대표 이미지 영역 -->
           <img src="https://picsum.photos/seed/{{id}}/500/300" class="card-img-top" alt="기사 이미지"


  class="card-img-top" style="object-fit: cover; height: 200px;">

                <!-- 본문 -->
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold text-dark text-truncate" title="{{title}}">{{title}}</h5>
                    <p class="card-text text-muted small mb-3 text-truncate" style="max-height: 3.5em;">
                        {{content}}
                    </p>
                    <a href="/articles/show?id={{id}}" class="btn btn-sm btn-outline-primary mt-auto">자세히 보기</a>
                </div>

               
            </div>
        </div>
        {{/list}}

        {{^list}}
        <div class="col">
            <div class="alert alert-secondary text-center w-100">등록된 기사 없음</div>
        </div>
        {{/list}}
    </div>

    <!-- 페이지 네비게이션 -->
    <div class="d-flex justify-content-between align-items-center mt-5">
        <div>
            {{#list.hasPrevious}}
            <a href="/articles/index?currentPage={{prePage}}" class="btn btn-outline-secondary btn-sm">← 이전</a>
            {{/list.hasPrevious}}
        </div>
        <div class="text-muted small">
            페이지 <span class="fw-bold text-dark">{{nextPage}}</span> / {{list.totalPages}}
        </div>
        <div>
            {{#list.hasNext}}
            <a href="/articles/index?currentPage={{nextPage}}" class="btn btn-outline-secondary btn-sm">다음 →</a>
            {{/list.hasNext}}
        </div>
    </div>

    <!-- 새 글쓰기 -->
    <div class="text-end mt-4">
        
    </div>

</div>
{{>layouts/footer}}
</body>
