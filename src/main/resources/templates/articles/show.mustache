{{>layouts/header}}

{{#msg}}
	<div>
	{{msg}}
	</div>
{{/msg}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
    <tr>
        <th>{{id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
    </tr>
    {{/article}}
    </tbody>
</table>

<a href="/articles/edit?id={{article.id}}" class="btn btn-primary">Edit</a>
<a href="/articles/delete?id={{article.id}}" class="btn btn-danger">Delete</a>

<a href="/articles">Go to Article List</a>
{{>layouts/footer}}