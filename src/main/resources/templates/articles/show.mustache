{{> layouts/header }}

<div class="container mt-5">
    {{#msg}}
        <div class="alert alert-warning text-center">
            {{msg}}
        </div>
    {{/msg}}

    <div class="card shadow rounded-4 p-4">
        <h3 class="mb-4">게시글 상세</h3>

        <div class="mb-3">
            <strong>ID:</strong>
            <span class="ms-2">{{article.id}}</span>
        </div>

        <div class="mb-3">
            <strong>제목:</strong>
            <span class="ms-2">{{article.title}}</span>
        </div>

        <div class="mb-3">
            <strong>내용:</strong>
            <p class="mt-2">{{article.content}}</p>
        </div>

        <div class="mt-4 d-flex justify-content-end gap-2">
            <a href="/articles/edit?id={{article.id}}" class="btn btn-outline-primary">수정</a>
            <a href="/articles/delete?id={{article.id}}" class="btn btn-outline-danger">삭제</a>
            <a href="/articles" class="btn btn-secondary">목록으로</a>
        </div>
    </div>
</div>

{{> layouts/footer }}
