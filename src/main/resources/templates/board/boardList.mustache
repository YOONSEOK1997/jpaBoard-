{{>layouts/header}}

<body class="bg-light">
<div class="container my-5">

    <h2 class="mb-4 text-primary fw-bold">Board</h2>

    {{#msg}}
    <div class="alert alert-info">{{msg}}</div>
    {{/msg}}

    <!-- 카드형 게시글 목록 -->
    <div class="list-group">
        {{#list}}
        <a href="/board/boardOne?boardNo={{boardNo}}" class="list-group-item list-group-item-action mb-3 rounded shadow-sm p-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-1 text-primary fw-bold">{{boardTitle}}</h5>
                <small class="text-muted">#{{boardNo}}</small>
            </div>
            <p class="mb-1 text-muted text-truncate">{{boardContent}}</p>
        </a>
        {{/list}}

        {{^list}}
        <div class="text-center text-muted">등록된 게시글이 없습니다.</div>
        {{/list}}
    </div>

    <!-- 페이지 네비게이션 -->
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div>
            {{#list.hasPrevious}}
            <a href="/board/boardList?currentPage={{prePage}}" class="btn btn-outline-primary btn-sm">이전 페이지</a>
            {{/list.hasPrevious}}
        </div>

        <div class="fw-bold">
            페이지 <span class="text-primary">{{nextPage}}</span> / {{list.totalPages}}
        </div>

        <div>
            {{#list.hasNext}}
            <a href="/board/boardList?currentPage={{nextPage}}" class="btn btn-outline-primary btn-sm">다음 페이지</a>
            {{/list.hasNext}}
        </div>
    </div>

    <!-- 검색 -->
    <div class="mt-4">
        <form action="/board/boardList" method="get" class="d-flex" role="search">
            <input class="form-control me-2" type="search" name="word" placeholder="검색어를 입력하세요" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">검색</button>
        </form>
    </div>

    <!-- 하단 정보 -->
    <div class="mt-3 text-muted">
        {{#list.first}}
        <div><span class="text-primary">첫 페이지입니다.</span></div>
        {{/list.first}}
        <p>전체 게시글 수: {{list.totalElements}}개</p>
        <p>페이지당 게시글 수: {{list.size}}개</p>
    </div>

    <!-- 새 글쓰기 -->
    <div class="text-end mt-4">
        <a href="/board/addBoard" class="btn btn-primary">새 글쓰기</a>
    </div>

</div>
{{>layouts/footer}}
</body>
